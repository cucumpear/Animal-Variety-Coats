<Patch>

<!-- ========================== Megascarab ================================= -->

  <Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Megascarab"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Megascarab"]/lifeStages</xpath>
	  <value>
		<lifeStages>
		  <li>
			<bodyGraphicData>
			  <texPath>Things/Pawn/Animal/Megascarab/Megascarab</texPath>
			  <drawSize>1</drawSize>
