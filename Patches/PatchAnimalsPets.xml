<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!--=====================  LabradorRetriever ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "LabradorRetriever"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "LabradorRetriever"]/lifeStages</xpath>
	  <value>
     <lifeStages>
      <li>
        <label>labrador puppy</label>
        <labelPlural>labrador puppies</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Labrador/Labrador</texPath>
          <drawSize>0.95</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedMedium</texPath>
          <drawSize>0.95</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Labrador/Labrador</texPath>
          <drawSize>1.35</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedMedium</texPath>
          <drawSize>1.35</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Labrador/Labrador</texPath>
          <drawSize>1.6</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedMedium</texPath>
          <drawSize>1.6</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	  </value>
	</Operation>
