<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<!--=====================  Caribou ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Caribou"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Caribou"]/lifeStages</xpath>
	  <value>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Caribou/Caribou</texPath>
          <drawSize>2.7</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Caribou</texPath>
          <drawSize>2.7</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Caribou/Caribou</texPath>
          <drawSize>3.1</drawSize>
          <shadowData>
            <volume>(0.3, 0.3, 0.3)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Caribou</texPath>
          <drawSize>3.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Caribou/Caribou</texPath>
          <drawSize>4.38</drawSize>
          <shadowData>
            <volume>(0.4, 0.4, 0.4)</volume>
            <offset>(0,0,-0.2)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Caribou</texPath>
          <drawSize>4.38</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	  </value>
	</Operation>
