<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!--=====================  Hare ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Hare"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Hare"]/lifeStages</xpath>
	  <value>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hare/Hare</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Hare</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hare/Hare</texPath>
          <drawSize>1.25</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Hare</texPath>
          <drawSize>1.25</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Hare/Hare</texPath>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.32, 0.35, 0.32)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Hare</texPath>
          <drawSize>1.15</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	  </value>
	</Operation>
