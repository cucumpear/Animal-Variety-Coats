<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<!--=====================  Chicken ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Chicken"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Chicken"]/lifeStages</xpath>
	  <value>
		<lifeStages>
		  <li>
			<label>chick</label>
			<bodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Chicken</texPath>
			  <drawSize>0.45</drawSize>
			  <!-- <color>(223,219,108)</color> -->
			</bodyGraphicData>
			<dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Dessicated_Chicken</texPath>
			  <drawSize>0.45</drawSize>
			</dessicatedBodyGraphicData>
		  </li>
		  <li>
			<labelMale>cockerel</labelMale>
			<bodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Chicken</texPath>
			  <drawSize>0.75</drawSize>
			  <!-- <color>(200,150,85)</color> -->
			</bodyGraphicData>
			<femaleGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Chicken</texPath>
			  <drawSize>0.73</drawSize>
			</femaleGraphicData>
			<dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Dessicated_Chicken</texPath>
			  <drawSize>0.75</drawSize>
			</dessicatedBodyGraphicData>
			<femaleDessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Dessicated_Chicken</texPath>
			  <drawSize>0.73</drawSize>
			</femaleDessicatedBodyGraphicData>
		  </li>
		  <li>
			<bodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Chicken</texPath>
			  <drawSize>0.87</drawSize>
			  <!-- <color>(200,150,85)</color> -->
			  <shadowData>
				<volume>(0.3, 0.4, 0.3)</volume>
				<offset>(0,0,-0.05)</offset>
			  </shadowData>
			</bodyGraphicData>
			<femaleGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Chicken</texPath>
			  <drawSize>0.85</drawSize>
			</femaleGraphicData>
			<dessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Dessicated_Chicken</texPath>
			  <drawSize>0.87</drawSize>
			</dessicatedBodyGraphicData>
			<femaleDessicatedBodyGraphicData>
			  <texPath>Things/Pawn/Animal/Chicken/Dessicated_Chicken</texPath>
			  <drawSize>0.85</drawSize>
			</femaleDessicatedBodyGraphicData>
		  </li>
		</lifeStages>
	  </value>
	</Operation>


</Patch>