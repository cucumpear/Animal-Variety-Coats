<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!--=====================  Cougar ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Cougar"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Cougar"]/lifeStages</xpath>
	  <value>
    <lifeStages>
      <li>
        <label>cougar cub</label>
        <labelPlural>cougar cubs</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cougar/Cougar</texPath>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Cougar</texPath>
          <drawSize>1.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cougar/Cougar</texPath>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Cougar</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Cougar/Cougar</texPath>
          <drawSize>2.18</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Cougar</texPath>
          <drawSize>2.18</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	  </value>
	</Operation>
