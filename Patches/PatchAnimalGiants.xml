<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- ========================== Megasloth ================================= -->

  <Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "Megasloth"]</xpath>
	  <value>
		<thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
	  </value>
	</Operation>
	<Operation Class="PatchOperationReplace">
	  <xpath>*/PawnKindDef[defName = "Megasloth"]/lifeStages</xpath>
	  <value>
    <lifeStages>
      <li>
        <label>megasloth baby</label>
        <labelPlural>megasloth baby</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megasloth/Megasloth</texPath>
          <drawSize>1.8</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Megasloth</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megasloth/Megasloth</texPath>
          <drawSize>2.6</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Megasloth</texPath>
          <drawSize>2.6</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Megasloth/Megasloth</texPath>
          <drawSize>3.8</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
		  <texPath>Things/Pawn/Animal/Dessicated/Dessicated_Megasloth</texPath>
          <drawSize>3.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	  </value>
	</Operation>
	
</Patch>